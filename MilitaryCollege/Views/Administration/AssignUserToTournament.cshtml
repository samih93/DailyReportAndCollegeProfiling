@model List<UserTournamentVM>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    int TournamentId = ViewBag.TournamentId;
}

<form method="post">
    
    <div class="col-md-4 card m-3">

        <div class="card-header">
            <h2>Assign User To Tournamnet</h2>
        </div>

        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <input hidden asp-for="@Model[i].UserId" />
                <input hidden asp-for="@Model[i].UserName" />
                <div class="form-check m-1">
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />&nbsp;&nbsp;
                    <label class="form-check-label">
                        @Model[i].UserName
                    </label>
                </div>
            }
        </div>
        <input type="hidden" name="TournamentId" value="@TournamentId" />
        <div class="card-footer">
            <input type="submit" class="btn btn-danger" value="Update">
        </div>
    </div>

</form>