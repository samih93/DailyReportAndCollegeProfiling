@using MilitaryCollege.Models.ViewModels
@model List<UserRoleViewModel>
@{
    ViewData["Title"] = "EditUserInRole";
    var RoleId = ViewBag.RoleId;
}
<form method="post">
    <div class="col-md-4 card m-3">

        <div class="card-header">
            <h2>Add Or Remove Users For This Role</h2>
        </div>

        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <input hidden asp-for="@Model[i].UserId" />
                <input hidden asp-for="@Model[i].UserName" />
                <div class="form-check m-1">
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />&nbsp;&nbsp;
                    <label class="form-check-label">
                        @Model[i].UserName
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" asp-route-RoleId="@RoleId" class="btn btn-danger" value="Update">
        </div>
    </div>

</form>